{
  "name": "nodeapisurf",
  "version": "1.0.0",
  "description": "Typescript Node.js API",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/index.js",
    "start:local": "dotenv -e .env -- ts-node-dev --transpile-only src/index.ts | pino-pretty -c",
    "test": "yarn lint && yarn style:check && yarn test:unit && yarn test:functional",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "test:functional": "dotenv -e .env -- jest --projects ./test --runInBand",
    "test:unit": "dotenv -e .env -- jest",
    "style:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "style: check" : "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "style: fix" : "prettier --check 'src/**/*.ts' 'test/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RRcharles03/NodeApiSurf.git"
  },
  "keywords": [
    "nodejs",
    "typescript"
  ],
  "author": "Rodrigo Charles",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/RRcharles03/NodeApiSurf/issues"
  },
  "homepage": "https://github.com/RRcharles03/NodeApiSurf#readme",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^16.9.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "jest": "^27.2.1",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^1.1.8",
    "type": "^2.5.0"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.6",
    "@typescript-eslint/parser": "^4.31.2",
    "body-parser": "^1.19.0",
    "eslint": "^7.32.0",
    "express": "^4.17.1",
    "module-alias": "^2.2.2",
    "tsconfig.json": "^1.0.10"
  }
}
